---
import Layout from "../layouts/Layout.astro";
import { IconCloud } from "@/components/ui/icon-cloud";

const slugs = [
  "typescript",
  "javascript",
  "dart",
  "react",
  "flutter",
  "android",
  "html5",
  "css3",
  "nodedotjs",
  "express",
  "nextdotjs",
  "postgresql",
  "firebase",
  "vercel",
  "git",
  "github",
  "visualstudiocode",
  "androidstudio",
  "figma",
];
---

<Layout title="Prestige - Publicitaria - Soluciones Digitales">
  <section>
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <img src="../../public/prestige-logo.svg" alt="Prestige Logo" class="h-16"/>

          <h1
            class="text-4xl font-semibold tracking-tight text-base-900 lg:text-balance mt-4"
          >
            Transformando el futuro digital de tu empresa
          </h1>
          <p class="text-base font-medium text-base-500 mt-4">
            Desatando estrategias innovadoras para soluciones digitales
            impactantes que resuenan con tu audiencia.
          </p>
        </div>
        <div
          class="relative flex items-center justify-center overflow-hidden rounded-lg bg-background p-8 lg:p-16"
        >
          <IconCloud iconSlugs={slugs} client:load />
        </div>
      </div>
    </div>
  </section>
</Layout>
